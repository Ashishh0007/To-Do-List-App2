<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %>
  </title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <link rel="stylesheet" href="/css/style.css">

  <link rel="icon" href="../assets/images/todo-list2.png">
</head>

<body>

  <!-- form part -->
  <form action="/create_todo" method="POST">
    <div class="head-div">
      <h1 id="heading">What To Do?</h1>
    </div>

    <label>
      <input type="textarea" id="textarea" name="msg" placeholder="Write a text" required>
    </label>

    <label>
      <input type="date" name="date" required>
    </label>

    <label>
      <select name="category" id="category" required>
        <option value="" disabled selected>Choose a category</option>
        <option value="Education">Education</option>
        <option value="Work">Work</option>
        <option value="Personal">Personal</option>
        <option value="Credit">Credit</option>
        <option value="Debit">Debit</option>
      </select>
    </label>

    <center>
      <button class="add-button" type="submit" name="action" value="add" formaction="add">
        <i class="fa fa-plus"></i> ADD
      </button>
    </center>
  </form>

<!-- display part here -->
  <section id="sec">
    <% for (let i of todo_list){ %>
      <div class="todo-list">

        <label class="todo">

          <div class="container-fluid">
            <div class="row">
              <div class="date-div col-2">
                <%= i.date %>
              </div>

              <div class="msg-div col-6">
                <%= i.msg %>
              </div>
              
              <!-- <div class="col-3"></div> -->
              <div class="col-2 catesec <%= i.category %> ">
                <%= i.category %>
              </div>

              <div class="col-1 icon1">
                <a href="/update/?id=<%=i._id %>">
                  <i class="fa fa-edit"></i>
                </a>
              </div>

              <div class="col-1 icon2"> 
                <a id="aa" href="/delete-todo/?id=<%= i.id %>">
                  <i class="fa fa-trash-o"></i>
                </a>
              </div>
            </div>
          </div>

        </label>
      </div>
    <%}%>
  </section>

  <script src="http://code.jquery.com/jquery-3.3.1.min.js"
    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>

</body>

</html>